---
import Layout from '../layouts/Layout.astro';
import { Github, Linkedin, Mail, GraduationCap, Download } from 'lucide-react';
---

<Layout title="David Exiga - Portfolio">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <div class="flex flex-col md:flex-row gap-12 lg:gap-20">
      
      {/* Left Column - Sticky */}
      <aside class="md:w-5/12 lg:w-1/3 flex flex-col items-center text-center md:items-start md:text-left md:sticky md:top-24 md:h-fit">
        <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-gray-100 dark:border-zinc-800 shadow-lg mb-6 relative bg-gray-200 dark:bg-zinc-800">
           <img 
            src="/images/me.jpg" 
            alt="David Exiga" 
            class="w-full h-full object-cover" 
            onerror="this.onerror=null; this.src='https://ui-avatars.com/api/?name=David+Exiga&background=166534&color=fff&size=200';"
          />
        </div>
        
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white mb-2">David Exiga</h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 font-medium mb-1">Master's Student</p>
        <p class="text-lg text-gray-500 dark:text-gray-400 mb-6">Georgia Tech</p>
        
        <div class="flex gap-4 mb-8">
           <a href="mailto:email@example.com" class="p-3 bg-gray-100 dark:bg-zinc-800 rounded-full hover:bg-green-100 hover:text-green-600 dark:hover:bg-zinc-700 transition-colors" aria-label="Email">
             <Mail className="w-5 h-5" />
           </a>
           <a href="https://github.com/dexigagt" target="_blank" class="p-3 bg-gray-100 dark:bg-zinc-800 rounded-full hover:bg-green-100 hover:text-green-600 dark:hover:bg-zinc-700 transition-colors" aria-label="GitHub">
             <Github className="w-5 h-5" />
           </a>
           <a href="https://linkedin.com" target="_blank" class="p-3 bg-gray-100 dark:bg-zinc-800 rounded-full hover:bg-green-100 hover:text-green-600 dark:hover:bg-zinc-700 transition-colors" aria-label="LinkedIn">
             <Linkedin className="w-5 h-5" />
           </a>
        </div>
      </aside>

      {/* Right Column - Scrollable */}
      <div class="md:w-7/12 lg:w-2/3 space-y-16">
        {/* About */}
        <section id="about" class="prose dark:prose-invert max-w-none">
           <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 not-prose">About Me</h2>
           <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
             I am a Master's student at Georgia Tech specializing in Robotics and AI.
             With a passion for building intelligent systems, I combine academic rigor with practical software engineering skills to create impactful solutions.
           </p>
           <p class="text-gray-600 dark:text-gray-300 leading-relaxed mt-4">
             My work focuses on the intersection of web technologies and autonomous systems, exploring how we can interface with and control complex robots through intuitive user interfaces.
           </p>
           
            <div class="not-prose mt-8">
               <a href="/cv.pdf" class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-white text-white dark:text-black rounded-lg hover:opacity-90 transition-opacity font-medium">
                 Download CV
                 <Download className="w-4 h-4" />
               </a>
            </div>
        </section>

        {/* Grid Section: Interests & Education */}
        <section class="grid grid-cols-1 gap-8">
           {/* Interests */}
           <div class="bg-gray-50 dark:bg-zinc-900/50 p-6 rounded-2xl border border-gray-100 dark:border-zinc-800">
             <h3 class="text-xl font-bold mb-4 flex items-center gap-2 text-gray-900 dark:text-white">Interests</h3>
             <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3">
               {['Robotics', 'Artificial Intelligence', 'Web Development', 'Computer Vision', 'Control Systems'].map(item => (
                 <li class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
                   <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                   {item}
                 </li>
               ))}
             </ul>
           </div>

           {/* Education */}
           <div class="bg-gray-50 dark:bg-zinc-900/50 p-6 rounded-2xl border border-gray-100 dark:border-zinc-800">
             <h3 class="text-xl font-bold mb-6 flex items-center gap-2 text-gray-900 dark:text-white">Education</h3>
             <div class="space-y-8">
               <div class="relative pl-8 border-l-2 border-gray-200 dark:border-zinc-700">
                  <div class="absolute -left-[9px] top-0 bg-white dark:bg-zinc-900 text-green-600">
                     <GraduationCap className="w-4 h-4" />
                  </div>
                  <h4 class="font-bold text-gray-900 dark:text-white text-lg">M.S. Robotics</h4>
                  <p class="text-gray-600 dark:text-gray-300">Georgia Tech</p>
                  <p class="text-sm text-gray-400 mt-1">2023 - Present</p>
               </div>
               <div class="relative pl-8 border-l-2 border-gray-200 dark:border-zinc-700">
                  <div class="absolute -left-[9px] top-0 bg-white dark:bg-zinc-900 text-gray-400">
                     <GraduationCap className="w-4 h-4" />
                  </div>
                  <h4 class="font-bold text-gray-900 dark:text-white text-lg">B.S. Computer Science</h4>
                  <p class="text-gray-600 dark:text-gray-300">Georgia Institute of Technology</p>
                  <p class="text-sm text-gray-400 mt-1">2019 - 2023</p>
               </div>
             </div>
           </div>
        </section>
      </div>
    </div>
  </div>
</Layout>
