---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, date, category, coverImage } = post.data;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group bg-white dark:bg-zinc-900 border border-gray-200 dark:border-zinc-800 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 flex flex-col h-full">
  <a href={`/posts/${post.slug}`} class="block aspect-video overflow-hidden bg-gray-100 dark:bg-zinc-800">
    {coverImage ? (
      <img 
        src={coverImage} 
        alt={title} 
        class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-300"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-zinc-600">
        <span class="text-sm">No Image</span>
      </div>
    )}
  </a>
  <div class="p-5 flex-1 flex flex-col">
    <div class="flex items-center gap-2 mb-3">
      <span class="px-2 py-1 text-xs font-semibold tracking-wider text-green-700 uppercase bg-green-100 dark:bg-green-900/30 dark:text-green-400 rounded-full">
        {category}
      </span>
    </div>
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
      <a href={`/posts/${post.slug}`}>
        {title}
      </a>
    </h3>
    <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-3 mb-4 flex-1">
      {description}
    </p>
    <div class="mt-auto text-sm text-gray-500 dark:text-gray-400">
      {formattedDate}
    </div>
  </div>
</article>
